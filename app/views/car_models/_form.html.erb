<% if @car_model.errors.any? %>
<div class="ls-alert-danger">
  <%= t(:validation_error, scope: [:application_view, :messages]) %>
</div>
  <ul>
    <% @car_model.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
  </ul>
  <br>
<% end %>

<%= form_with(model: @car_model, local: true, class: "ls-form row") do
                                                              |form| %>
<label class="ls-label col-md-2">
  <%= form.label :name %>
  <p class="ls-label-info">
   <%= t(:name, scope: [:car_model_view, :form_label_info])%>
  </p>
  <%= form.text_field :name %>
</label>

<label class="ls-label col-md-2">
  <%= form.label :year %>
    <p class="ls-label-info"></p>
  <%= form.text_field :year %>
</label>

<label class="ls-label col-md-2">
  <%= form.label :motorization %>
  <p class="ls-label-info">
    <%= t(:motorization, scope: [:car_model_view, :form_label_info])%>
  </p>
  <%= form.text_field :motorization %>
</label>

<label class="ls-label col-md-2">
  <%= form.label :fuel_type %>
  <p class="ls-label-info">
    <%= t(:fuel_type, scope: [:car_model_view, :form_label_info])%>
  </p>
  <%= form.text_field :fuel_type %>
</label>

<label class="ls-label col-md-2">
  <%= form.label :manufacturer_id %>
  <p class="ls-label-info"></p>
  <div class="ls-custom-select">
   <%= form.collection_select :manufacturer_id, @manufacturers, :id,
                             :name, class: "ls-custom" %>
  </div>
</label>

<label class="ls-label col-md-2">
  <%= form.label :car_category_id %>
  <p class="ls-label-info"></p>
  <div class="ls-custom-select">
   <%= form.collection_select :car_category_id, @car_categories, :id,
                              :name, class: "ls-custom" %>
  </div>
</label>

<div class="ls-actions-btn">
  <%= form.submit class: 'ls-btn-primary' %>
</div>

<% end %>
